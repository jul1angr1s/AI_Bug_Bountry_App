# Test Environment Variables
# Copy this to .env.test and fill in your test values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Database (use separate test database)
DATABASE_URL="postgresql://user:password@localhost:5432/thunder_test"

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
# Redis (use separate test Redis instance or db)
REDIS_URL="redis://localhost:6379/1"

# ============================================================================
# BLOCKCHAIN CONFIGURATION
# ============================================================================
# Blockchain
BASE_SEPOLIA_RPC_URL="https://sepolia.base.org"

# Contract Addresses (Base Sepolia testnet)
PROTOCOL_REGISTRY_ADDRESS="0x..."
VALIDATION_REGISTRY_ADDRESS="0x..."
BOUNTY_POOL_ADDRESS="0x..."

# Test Wallets
# Note: These are Anvil's default test accounts - DO NOT use in production
PRIVATE_KEY="0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80"
PRIVATE_KEY2="0x59c6995e998f97a5a0044966f0945389dc9e86dae88c7a8412f4603b6b78690d"

# ============================================================================
# AI CONFIGURATION
# ============================================================================
# AI Analysis Feature Flag
# Set to 'false' for regular E2E tests (default)
# Set to 'true' for AI-powered vulnerability analysis tests
AI_ANALYSIS_ENABLED="false"

# Anthropic Claude API Configuration
# Required when AI_ANALYSIS_ENABLED=true
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=""

# AI Model Configuration (optional)
# Default: claude-opus-4-5-20251101
ANTHROPIC_MODEL="claude-opus-4-5-20251101"

# AI Analysis Timeout (ms)
# Default: 120000 (2 minutes)
AI_ANALYSIS_TIMEOUT="120000"

# AI Retry Configuration
# Maximum number of retries for AI API calls
AI_MAX_RETRIES="3"

# AI Request Rate Limiting
# Maximum concurrent AI requests
AI_MAX_CONCURRENT_REQUESTS="5"

# ============================================================================
# TEST CONFIGURATION
# ============================================================================
# Test Configuration
NODE_ENV="test"

# Test Timeout (ms)
TEST_TIMEOUT="30000"

# Test Database Auto-cleanup
# Set to 'true' to automatically clean up test data after each test
TEST_AUTO_CLEANUP="true"
