{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/server.ts",
    "researcher:worker": "NODE_ENV=development tsx watch src/agents/researcher/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "smoke": "tsx tests/smoke.ts",
    "test": "vitest run --exclude='**/*.ai.test.ts'",
    "test:ai": "vitest run --testNamePattern='.*\\.ai\\.test\\.ts$'",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:regression": "vitest run tests/e2e/regression",
    "test:docs-parity": "node --test ../scripts/__tests__/docs-command-parity.test.mjs",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "check:docs-parity": "node ../scripts/docs-command-parity.mjs",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "docker:build": "docker build -t thunder-backend .",
    "docker:build:dev": "docker build --target development -t thunder-backend:dev .",
    "docker:build:prod": "docker build --target production -t thunder-backend:prod .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f backend",
    "docker:restart": "docker-compose restart backend",
    "docker:clean": "docker-compose down -v",
    "lint": "eslint src/",
    "lint:strict": "eslint src/ --max-warnings=0",
    "test:unit": "vitest run --exclude='**/*.ai.test.ts' --exclude='**/*.integration.test.ts'"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@supabase/supabase-js": "^2.38.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/ws": "^8.18.1",
    "@x402/core": "^2.3.0",
    "@x402/evm": "^2.3.0",
    "@x402/express": "^2.3.0",
    "bullmq": "^5.67.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "ethers": "^6.16.0",
    "express": "^4.18.0",
    "find-free-port": "^2.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0",
    "nanoid": "^5.0.7",
    "pino": "^10.3.0",
    "pino-pretty": "^13.1.3",
    "reflect-metadata": "^0.2.2",
    "simple-git": "^3.30.0",
    "socket.io": "^4.6.0",
    "tsyringe": "^4.10.0",
    "ws": "^8.19.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^4.28.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.30",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.39.2",
    "nodemon": "^3.0.2",
    "prisma": "^5.0.0",
    "supertest": "^7.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^2.1.8"
  },
  "optionalDependencies": {
    "@sentry/node": "^10.38.0"
  }
}
