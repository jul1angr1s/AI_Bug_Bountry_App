{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "NODE_ENV=development tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "smoke": "tsx tests/smoke.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "docker:build": "docker build -t thunder-backend .",
    "docker:build:dev": "docker build --target development -t thunder-backend:dev .",
    "docker:build:prod": "docker build --target production -t thunder-backend:prod .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f backend",
    "docker:restart": "docker-compose restart backend",
    "docker:clean": "docker-compose down -v"
  },
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "@supabase/supabase-js": "^2.38.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.0",
    "morgan": "^1.10.0",
    "nanoid": "^5.0.7",
    "socket.io": "^4.6.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^4.28.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.30",
    "nodemon": "^3.0.2",
    "prisma": "^5.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
