generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProtocolStatus {
  PENDING
  ACTIVE
  PAUSED
  DEPRECATED
}

enum Severity {
  CRITICAL
  HIGH
  MEDIUM
  LOW
  INFO
}

enum VulnerabilityStatus {
  OPEN
  ACKNOWLEDGED
  RESOLVED
  DISMISSED
}

enum AgentType {
  PROTOCOL
  RESEARCHER
  VALIDATOR
}

enum AgentStatus {
  ONLINE
  OFFLINE
  SCANNING
  ERROR
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}

// Researcher Agent - Scan Lifecycle Enums
enum ScanState {
  QUEUED
  RUNNING
  SUCCEEDED
  FAILED
  CANCELED
}

enum ScanStep {
  CLONE
  COMPILE
  DEPLOY
  ANALYZE
  AI_DEEP_ANALYSIS
  PROOF_GENERATION
  SUBMIT
}

enum FindingStatus {
  PENDING
  VALIDATED
  REJECTED
  DUPLICATE
}

enum ProofStatus {
  ENCRYPTED
  SUBMITTED
  VALIDATED
  REJECTED
}

enum AnalysisMethod {
  STATIC
  AI
  HYBRID
}

model Protocol {
  id           String         @id @default(uuid())
  authUserId   String
  ownerAddress String
  githubUrl    String         @unique
  branch       String
  contractPath String
  contractName String
  bountyTerms  String
  status       ProtocolStatus @default(PENDING)
  riskScore    Int?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  // Protocol Agent fields
  registrationState  String? // PENDING, ACTIVE, FAILED
  registrationTxHash String?
  failureReason      String?
  fundedAt           DateTime?
  totalBountyPool    Float     @default(0)
  availableBounty    Float     @default(0)
  paidBounty         Float     @default(0)

  // On-chain fields (Phase 3B)
  onChainProtocolId String? // bytes32 from ProtocolRegistry contract

  vulnerabilities Vulnerability[]
  scans           Scan[]
  auditLogs       AuditLog[]
  fundingEvents   FundingEvent[]

  @@index([ownerAddress])
  @@index([registrationState])
  @@index([githubUrl])
}

model Vulnerability {
  id                String              @id @default(uuid())
  protocolId        String
  vulnerabilityHash String
  severity          Severity
  status            VulnerabilityStatus
  discoveredAt      DateTime            @default(now())
  bounty            Float?
  proof             String?

  protocol Protocol  @relation(fields: [protocolId], references: [id], onDelete: Cascade)
  payments Payment[]

  @@index([protocolId, discoveredAt])
}

model Agent {
  id             String      @id @default(uuid())
  type           AgentType
  status         AgentStatus
  currentTask    String?
  taskProgress   Float?
  lastHeartbeat  DateTime?
  uptime         Int?
  scansCompleted Int         @default(0)

  scans     Scan[]
  agentRuns AgentRun[]

  @@index([lastHeartbeat])
}

model Scan {
  id          String    @id @default(uuid())
  protocolId  String
  agentId     String?
  state       ScanState @default(QUEUED)
  currentStep ScanStep?

  // Target specification
  targetBranch     String?
  targetCommitHash String?

  // Timing
  startedAt   DateTime  @default(now())
  completedAt DateTime?

  // Progress & Results
  vulnerabilitiesFound Int @default(0)
  findingsCount        Int @default(0)

  // Error handling
  errorCode    String?
  errorMessage String?
  retryCount   Int     @default(0)

  // Relations
  protocol Protocol         @relation(fields: [protocolId], references: [id], onDelete: Cascade)
  agent    Agent?           @relation(fields: [agentId], references: [id], onDelete: SetNull)
  findings Finding[]
  proofs   Proof[]
  steps    ScanStepRecord[]

  @@index([protocolId, state])
  @@index([state, startedAt])
  @@index([agentId])
}

model Finding {
  id     String @id @default(uuid())
  scanId String

  // Vulnerability details
  vulnerabilityType String
  severity          Severity
  status            FindingStatus @default(PENDING)

  // Location
  filePath         String
  lineNumber       Int?
  functionSelector String?

  // Analysis
  description     String
  confidenceScore Float  @default(0)

  // AI Analysis fields (Phase 4)
  aiConfidenceScore     Float?
  remediationSuggestion String?         @db.Text
  codeSnippet           String?         @db.Text
  analysisMethod        AnalysisMethod?

  // Metadata
  createdAt   DateTime  @default(now())
  validatedAt DateTime?

  // Relations
  scan   Scan    @relation(fields: [scanId], references: [id], onDelete: Cascade)
  proofs Proof[]

  @@index([scanId])
  @@index([status])
  @@index([severity])
}

model Proof {
  id        String  @id @default(uuid())
  scanId    String
  findingId String?

  // Proof content
  status           ProofStatus @default(ENCRYPTED)
  encryptedPayload String

  // Storage
  ipfsCid    String?
  storageUrl String?

  // Cryptography
  researcherSignature String
  validatorPublicKey  String?
  encryptionKeyId     String

  // Submission
  submittedAt DateTime  @default(now())
  validatedAt DateTime?

  // On-chain fields (Phase 3B)
  onChainValidationId String? // bytes32 from ValidationRegistry contract
  onChainTxHash       String? // Transaction hash for on-chain validation

  // Relations
  scan    Scan     @relation(fields: [scanId], references: [id], onDelete: Cascade)
  finding Finding? @relation(fields: [findingId], references: [id], onDelete: SetNull)

  @@index([scanId, status])
  @@index([findingId])
}

model ScanStepRecord {
  id     String @id @default(uuid())
  scanId String

  step   ScanStep
  status String // PENDING, RUNNING, COMPLETED, FAILED

  startedAt   DateTime  @default(now())
  completedAt DateTime?

  // Error details
  errorCode    String?
  errorMessage String?

  // Metadata
  metadata Json?

  // Relations
  scan Scan @relation(fields: [scanId], references: [id], onDelete: Cascade)

  @@index([scanId, step])
  @@index([status])
}

model AgentRun {
  id      String @id @default(uuid())
  agentId String

  // Execution context
  scanId         String?
  runtimeVersion String
  workerId       String

  // Execution metrics
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  duration    Int? // milliseconds

  // Error tracking
  errorCode    String?
  errorMessage String?
  stackTrace   String?

  // Resources
  memoryUsage Int? // MB
  cpuUsage    Float? // percentage

  // Relations
  agent Agent @relation(fields: [agentId], references: [id], onDelete: Cascade)

  @@index([agentId, startedAt])
  @@index([scanId])
  @@index([errorCode])
}

model Payment {
  id              String        @id @default(uuid())
  vulnerabilityId String
  amount          Float
  currency        String
  txHash          String?
  status          PaymentStatus @default(PENDING)
  paidAt          DateTime?

  // On-chain fields (Phase 3B)
  onChainBountyId String? // bytes32 from BountyPool contract

  // Phase 4 payment automation fields
  researcherAddress String
  reconciled        Boolean   @default(false)
  reconciledAt      DateTime?
  failureReason     String?
  retryCount        Int       @default(0)
  queuedAt          DateTime?

  vulnerability   Vulnerability           @relation(fields: [vulnerabilityId], references: [id], onDelete: Cascade)
  reconciliations PaymentReconciliation[]

  @@index([researcherAddress])
  @@index([reconciled])
}

model AuditLog {
  id         String   @id @default(uuid())
  protocolId String
  action     String // REGISTRATION_ATTEMPT, FUNDING_SUBMISSION, etc.
  txHash     String?
  metadata   Json?
  createdAt  DateTime @default(now())

  protocol Protocol @relation(fields: [protocolId], references: [id], onDelete: Cascade)

  @@index([protocolId])
  @@index([createdAt])
  @@index([action])
}

model FundingEvent {
  id          String    @id @default(uuid())
  protocolId  String
  amount      Float
  txHash      String
  status      String // PENDING, CONFIRMED, FAILED
  changeType  String // DEPOSIT, PAYMENT_RELEASED, RESERVATION
  createdAt   DateTime  @default(now())
  confirmedAt DateTime?

  protocol Protocol @relation(fields: [protocolId], references: [id], onDelete: Cascade)

  @@index([protocolId])
  @@index([createdAt])
  @@index([status])
}

model PaymentReconciliation {
  id              String    @id @default(cuid())
  paymentId       String? // Nullable for orphaned payments
  onChainBountyId String // validationId from event
  txHash          String
  amount          Float
  status          String // ORPHANED, MISSING_PAYMENT, UNCONFIRMED_PAYMENT, AMOUNT_MISMATCH, DISCREPANCY, RESOLVED
  discoveredAt    DateTime  @default(now())
  resolvedAt      DateTime?
  notes           String?

  payment Payment? @relation(fields: [paymentId], references: [id], onDelete: SetNull)

  @@index([status])
  @@index([onChainBountyId])
}

model EventListenerState {
  id                 String   @id @default(cuid())
  contractAddress    String
  eventName          String
  lastProcessedBlock Int
  updatedAt          DateTime @default(now()) @updatedAt

  @@unique([contractAddress, eventName])
}

model KnowledgeDocument {
  id        String    @id @default(uuid())
  source    String
  title     String
  content   String    @db.Text
  embedding Json
  severity  Severity?
  tags      String[]
  version   Int
  createdAt DateTime  @default(now())

  @@index([source, version])
  @@index([tags])
}
