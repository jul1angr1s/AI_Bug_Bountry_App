generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProtocolStatus {
  PENDING
  ACTIVE
  PAUSED
  DEPRECATED
}

enum Severity {
  CRITICAL
  HIGH
  MEDIUM
  LOW
  INFO
}

enum VulnerabilityStatus {
  OPEN
  ACKNOWLEDGED
  RESOLVED
  DISMISSED
}

enum AgentType {
  PROTOCOL
  RESEARCHER
  VALIDATOR
}

enum AgentStatus {
  ONLINE
  OFFLINE
  SCANNING
  ERROR
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}

// Researcher Agent - Scan Lifecycle Enums
enum ScanState {
  QUEUED
  RUNNING
  SUCCEEDED
  FAILED
  CANCELED
}

enum ScanStep {
  CLONE
  COMPILE
  DEPLOY
  ANALYZE
  PROOF_GENERATION
  SUBMIT
}

enum FindingStatus {
  PENDING
  VALIDATED
  REJECTED
  DUPLICATE
}

enum ProofStatus {
  ENCRYPTED
  SUBMITTED
  VALIDATED
  REJECTED
}

model Protocol {
  id                String         @id @default(uuid())
  authUserId        String
  ownerAddress      String
  githubUrl         String         @unique
  branch            String
  contractPath      String
  contractName      String
  bountyTerms       String
  status            ProtocolStatus @default(PENDING)
  riskScore         Int?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  
  // Protocol Agent fields
  registrationState   String?        // PENDING, ACTIVE, FAILED
  registrationTxHash  String?
  failureReason       String?
  fundedAt            DateTime?
  totalBountyPool     Float          @default(0)
  availableBounty     Float          @default(0)
  paidBounty          Float          @default(0)

  vulnerabilities Vulnerability[]
  scans           Scan[]
  auditLogs       AuditLog[]
  fundingEvents   FundingEvent[]

  @@index([ownerAddress])
  @@index([registrationState])
  @@index([githubUrl])
}

model Vulnerability {
  id                String              @id @default(uuid())
  protocolId        String
  vulnerabilityHash String
  severity          Severity
  status            VulnerabilityStatus
  discoveredAt      DateTime            @default(now())
  bounty            Float?
  proof             String?

  protocol Protocol @relation(fields: [protocolId], references: [id], onDelete: Cascade)
  payments Payment[]

  @@index([protocolId, discoveredAt])
}

model Agent {
  id             String      @id @default(uuid())
  type           AgentType
  status         AgentStatus
  currentTask    String?
  taskProgress   Float?
  lastHeartbeat  DateTime?
  uptime         Int?
  scansCompleted Int         @default(0)

  scans    Scan[]
  agentRuns AgentRun[]

  @@index([lastHeartbeat])
}

model Scan {
  id                   String    @id @default(uuid())
  protocolId           String
  agentId              String?
  state                ScanState @default(QUEUED)
  currentStep          ScanStep?
  
  // Target specification
  targetBranch         String?
  targetCommitHash     String?
  
  // Timing
  startedAt            DateTime  @default(now())
  completedAt          DateTime?
  
  // Progress & Results
  vulnerabilitiesFound Int       @default(0)
  findingsCount        Int       @default(0)
  
  // Error handling
  errorCode            String?
  errorMessage         String?
  retryCount           Int       @default(0)
  
  // Relations
  protocol Protocol @relation(fields: [protocolId], references: [id], onDelete: Cascade)
  agent    Agent?   @relation(fields: [agentId], references: [id], onDelete: SetNull)
  findings Finding[]
  proofs   Proof[]
  steps    ScanStepRecord[]
  
  @@index([protocolId, state])
  @@index([state, startedAt])
  @@index([agentId])
}

model Finding {
  id                String        @id @default(uuid())
  scanId            String
  
  // Vulnerability details
  vulnerabilityType String
  severity          Severity
  status            FindingStatus @default(PENDING)
  
  // Location
  filePath          String
  lineNumber        Int?
  functionSelector  String?
  
  // Analysis
  description       String
  confidenceScore   Float         @default(0)
  
  // Metadata
  createdAt         DateTime      @default(now())
  validatedAt       DateTime?
  
  // Relations
  scan     Scan   @relation(fields: [scanId], references: [id], onDelete: Cascade)
  proofs   Proof[]
  
  @@index([scanId])
  @@index([status])
  @@index([severity])
}

model Proof {
  id              String      @id @default(uuid())
  scanId          String
  findingId       String?
  
  // Proof content
  status          ProofStatus @default(ENCRYPTED)
  encryptedPayload String
  
  // Storage
  ipfsCid         String?
  storageUrl      String?
  
  // Cryptography
  researcherSignature String
  validatorPublicKey  String?
  encryptionKeyId     String
  
  // Submission
  submittedAt     DateTime    @default(now())
  validatedAt     DateTime?
  
  // Relations
  scan    Scan     @relation(fields: [scanId], references: [id], onDelete: Cascade)
  finding Finding? @relation(fields: [findingId], references: [id], onDelete: SetNull)
  
  @@index([scanId, status])
  @@index([findingId])
}

model ScanStepRecord {
  id          String    @id @default(uuid())
  scanId      String
  
  step        ScanStep
  status      String    // PENDING, RUNNING, COMPLETED, FAILED
  
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  
  // Error details
  errorCode   String?
  errorMessage String?
  
  // Metadata
  metadata    Json?
  
  // Relations
  scan Scan @relation(fields: [scanId], references: [id], onDelete: Cascade)
  
  @@index([scanId, step])
  @@index([status])
}

model AgentRun {
  id              String   @id @default(uuid())
  agentId         String
  
  // Execution context
  scanId          String?
  runtimeVersion  String
  workerId        String
  
  // Execution metrics
  startedAt       DateTime @default(now())
  completedAt     DateTime?
  duration        Int?     // milliseconds
  
  // Error tracking
  errorCode       String?
  errorMessage    String?
  stackTrace      String?
  
  // Resources
  memoryUsage     Int?     // MB
  cpuUsage        Float?   // percentage
  
  // Relations
  agent Agent @relation(fields: [agentId], references: [id], onDelete: Cascade)
  
  @@index([agentId, startedAt])
  @@index([scanId])
  @@index([errorCode])
}

model Payment {
  id              String        @id @default(uuid())
  vulnerabilityId String
  amount          Float
  currency        String
  txHash          String?
  status          PaymentStatus @default(PENDING)
  paidAt          DateTime?

  vulnerability Vulnerability @relation(fields: [vulnerabilityId], references: [id], onDelete: Cascade)
}

model AuditLog {
  id          String   @id @default(uuid())
  protocolId  String
  action      String   // REGISTRATION_ATTEMPT, FUNDING_SUBMISSION, etc.
  txHash      String?
  metadata    Json?
  createdAt   DateTime @default(now())
  
  protocol Protocol @relation(fields: [protocolId], references: [id], onDelete: Cascade)
  
  @@index([protocolId])
  @@index([createdAt])
  @@index([action])
}

model FundingEvent {
  id          String   @id @default(uuid())
  protocolId  String
  amount      Float
  txHash      String
  status      String   // PENDING, CONFIRMED, FAILED
  changeType  String   // DEPOSIT, PAYMENT_RELEASED, RESERVATION
  createdAt   DateTime @default(now())
  confirmedAt DateTime?
  
  protocol Protocol @relation(fields: [protocolId], references: [id], onDelete: Cascade)
  
  @@index([protocolId])
  @@index([createdAt])
  @@index([status])
}
